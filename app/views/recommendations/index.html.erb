<h1><%= I18n.t("recommendations.index.listing_recommendations") %></h1>

<table>
  <tr>
    <th><%= I18n.t("recommendations.index.name") %></th>
    <th><%= I18n.t("recommendations.index.description") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.name %></td>
        <td><%= recommendation.description %></td>
        <td><%= link_to I18n.t("recommendations.index.show"), recommendation %></td>
        <td><%= link_to I18n.t("recommendations.index.edit"), edit_recommendation_path(recommendation) %></td>
        <td><%= link_to I18n.t("recommendations.index.destroy"), recommendation, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br/>
