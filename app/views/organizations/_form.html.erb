<% if @organization %>

<%= tag("div", :data => @cats) %>

<%= simple_form_for(@organization) do |f| %>
  
 <%= f.input :name %>
 <%= f.input :street, :label => I18n.t("street_and_number") %>
 <%= f.input :street2, :label => I18n.t("street_additions") %>
 <%= f.input :postalcode, :label => I18n.t("postalcode") %>
 <%= f.input :city, :label => I18n.t("city") %>
 <%= f.input :phone1, :label => I18n.t("phone") %>
 <%= f.input :phone2, :label => I18n.t("mobile_phone") %>
 <%=  f.label I18n.t("category") %>
 <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true %>
 <%= f.input :url, :label => I18n.t("web_url") %>
 <%= f.input :facebook, :placeholder => I18n.t("fb_example"), :label => I18n.t("fb_page")  %>
 <%= f.input :twitter,:placeholder => I18n.t("tw_example"), :label => I18n.t("tw_page") %>
 <%= f.button :submit, :caption => I18n.t("save")%>
<% end %>
<% end %>
 


   
