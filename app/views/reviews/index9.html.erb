<!DOCTYPE html>
<html>
<head>
  <title><%= I18n.t("reviews.index9.bewertungen") %></title>
</head>
<body>
  <h4>Bewertungen f√ºr <%= @org.name %></h4>
<div id="example" class="k-content">
  <div id="grid"></div>
  <script>
      $(document).ready(function() {
          $("#grid").kendoGrid({
              <%= I18n.t("reviews.index9.datasource") %>: {
                  <%= I18n.t("reviews.index9.type") %>: "json",
                  <%= I18n.t("reviews.index9.transport") %>: {
                      <%= I18n.t("reviews.index9.read") %>: "/reviews.json"
                  },
                  <%= I18n.t("reviews.index9.schema") %>: {
                      <%= I18n.t("reviews.index9.model") %>: {
                          <%= I18n.t("reviews.index9.fields") %>: {
                              <%= I18n.t("reviews.index9.review") %>_date: { type: "string" },

                              <%= I18n.t("reviews.index9.body") %>: { type: "string" },
                              <%= I18n.t("reviews.index9.reviewer") %>: {name: {type: "string"}},
                              <%= I18n.t("reviews.index9.rating") %>: { type: "string"}
                          }
                      }
                  },
                  <%= I18n.t("reviews.index9.pagesize") %>: 10,
                  <%= I18n.t("reviews.index9.serverpaging") %>: false,
                  <%= I18n.t("reviews.index9.serverfiltering") %>: true,
                  <%= I18n.t("reviews.index9.serversorting") %>: true
              },
              <%= I18n.t("reviews.index9.height") %>: 850,
              <%= I18n.t("reviews.index9.filterable") %>: true,
              <%= I18n.t("reviews.index9.sortable") %>: true,
              <%= I18n.t("reviews.index9.pageable") %>: true,
              <%= I18n.t("reviews.index9.columns") %>: [
                  {
                      <%= I18n.t("reviews.index9.field") %>:"review_date".toString(),
                      <%= I18n.t("reviews.index9.width") %>: 60,
                      <%= I18n.t("reviews.index9.title") %>: "Vom:"
                  },
                  { field: "reviewer.name",
              <%= I18n.t("reviews.index9.width") %>: 100,
               <%= I18n.t("reviews.index9.title") %>: "Name"}
                  ,{
                  <%= I18n.t("reviews.index9.field") %>:"body",
                  <%= I18n.t("reviews.index9.filterable") %>: true,
                  <%= I18n.t("reviews.index9.title") %>: "Bewertungstext"
              },
                  { field: "rating",
                  <%= I18n.t("reviews.index9.filterable") %>: false,
                  <%= I18n.t("reviews.index9.width") %>: 30,
                  <%= I18n.t("reviews.index9.title") %>: "*"}
              ]
          });
      });
  </script>
</div>


</body>
</html>
