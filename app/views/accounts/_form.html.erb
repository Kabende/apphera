    <div class="field">
      <%= I18n.t("accounts_form_firstname") %>
      <br/>
      <%= f.text_field :firstname %>
    </div>

    <div class="field">
     <%= I18n.t("accounts_form_lastname") %>
      <br/>
      <%= f.text_field :lastname %>
    </div>
    </legend>
    <div class="field">
      <%= f.label :phone %>
      <br/>
      <%= f.text_field :phone %>
    </div>
    <div class="actions">
      <%= f.submit I18n.t("form_save", :class => "btn-primary") %>
    </div>
<% end %>
