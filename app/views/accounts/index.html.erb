<div class="well">
  <h3><%= I18n.t("my_account") %></h3>
  <address>
    <p>
      <b><%= I18n.t("company") %>:</b>
      <%= @account.name %>
    </p>

    <p>
      <b><%= I18n.t("firstname") %>:</b>
      <%= @account.firstname %>
    </p>

    <p>
      <b><%= I18n.t("lastname") %>:</b>
      <%= @account.lastname %>
    </p>

    <p>
      <b><%= I18n.t("phone") %>:</b>
      <%= @account.phone %>
    </p>
  </address>
  <%= link_to I18n.t("edit"), edit_account_path(@account), :class => "btn" %>
</div>


<h4><%= I18n.t("my_locations_and_venues") %></h4>

  <div id="comments">
    <%= render :partial => @organizations, :locals => { :list => true } %>
  </div>


<br/>

