<% if @aggregate %>
    <div class="row">
      <div class="span3">
        <h3><%= I18n.t("home._widgets.Überblick") %></h3></div>
    </div> <br/>

    <div class="row">

      <div class="span3">
        <div class="well">
          <h4><%= I18n.t("home._widgets.facebook_84_100") %></h4>

          <div class="progress progress-striped progress-success active">
            <div class="bar"
                 <%= I18n.t("home._widgets.style") %>="width: 84%;"></div>
          </div>
          <h4><%= I18n.t("home._widgets.twitter_50_100") %></h4>

          <div class="progress progress-striped progress-warning active">
            <div class="bar"
                 <%= I18n.t("home._widgets.style") %>="width: 50%;"></div>
          </div>
          <h4><%= I18n.t("home._widgets.foursquare_78_100") %></h4>

          <div class="progress progress-striped progress-success active">
            <div class="bar"
                 <%= I18n.t("home._widgets.style") %>="width: 78%;"></div>
          </div>
          <h4><%= I18n.t("home._widgets.youtube_20_100") %></h4>

          <div class="progress progress-striped progress-danger active">
            <div class="bar"
                 <%= I18n.t("home._widgets.style") %>="width: 20%;"></div>
          </div>


          <!-- content -->


        </div>
      </div>
      <div class="row">

        <div class="span3">
          <div class="well">
            <h4>Bewertungen (<%= @aggregate.review_avg || 0 %>/5.00) </h4>
            <% if @aggregate.review_avg <= 2 %>
                <div class="progress progress-striped progress-danger active">
            <% elsif @aggregate.review_avg >= 2.1 && @aggregate.review_avg <= 3.5 %>
                <div class="progress progress-striped progress-warning active">
            <% else %>
                <div class="progress progress-striped progress-success active">

            <% end %>
            <div class="bar"
                 <%= I18n.t("home._widgets.style") %>="width:<%= @aggregate.review_avg/5*100 %>%;"></div>
            </div>
            </div>
            </div>

            <div class="span3">
              <div class="well">

                <h4><%= I18n.t("home._widgets.website_verfügbarkeit_100_100") %></h4>

                <div class="progress progress-striped progress-success active">
                  <div class="bar"
                       <%= I18n.t("home._widgets.style") %>="width: 100%;"></div>
                </div>
                <h4><%= I18n.t("home._widgets.website_geschwindigkeit_60_100") %></h4>

                <div class="progress progress-striped progress-warning active">
                  <div class="bar"
                       <%= I18n.t("home._widgets.style") %>="width: 60%;"></div>
                </div>

              </div>
            </div>
          </div>
        </div>
<% end %>
